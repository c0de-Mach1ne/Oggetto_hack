<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivEventPoster"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvEventTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@id/ivEventPoster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivEventPoster"
        tools:text="Поедание бананов" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTizer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/ivEventPoster"
        app:layout_constraintStart_toStartOf="@id/ivEventPoster"
        app:layout_constraintTop_toBottomOf="@id/tvEventTitle"
        tools:text="Будет много вкусных бананов" />


</androidx.constraintlayout.widget.ConstraintLayout>